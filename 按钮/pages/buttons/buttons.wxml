<view class="buttonView">

   <view class = "default">
        <button type="default" size="{{defaultSize}}" loading="{{loading}}" plain="{{plain}}"
        disabled="{{disabled}}" bindtap="onClickDefault" hover-class="other-button-hover"> 加载按钮:{{status}} </button>
   </view>
        
        <view class = "default">
           <button type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}"
        disabled="{{disabled}}" bindtap="onClickPrimary"> 尺寸按钮:{{status}}
            </button>
         </view>
        <view class = "default">
            <button type="warn" size="{{warnSize}}" loading="{{loading}}" plain="{{plain}}"
        disabled="{{disabled}}" bindtap="onClickWarn"> 镂空按钮:{{status}} 
            </button>
         </view>

        <button bindtap="setDisabled">点击设置以上按钮disabled属性</button>

</view>