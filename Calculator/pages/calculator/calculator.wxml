<!--calculator.wxml-->
<view class = "main"> 

    <view class = "showArea">
        <input placeholder = "请输入需要计算的数值" focus = "true" disabled = "true" value = "{{inputValue}}">
        </input>
    </view>

    <view class = "actionArea">
        <view class = "first">
            <button class = "button" bindtap = "onPlus" type = "primary">+</button>
            <button class = "button" bindtap = "onMinus" type = "primary">—</button>
            <button class = "button" bindtap = "onMultiply" type = "primary">X</button>
            <button class = "button" bindtap = "onDivide" type = "primary">/</button>
        </view>

        <view class = "second">
            <button class = "button" bindtap = "onSeven" type = "default">7</button>
            <button class = "button" bindtap = "onEight" type = "default">8</button>
            <button class = "button" bindtap = "onNine" type = "default">9</button>
            <button class = "button" bindtap = "onDel" type = "primary">Del</button>
        </view>

        <view class = "third">
            <button class = "button" bindtap = "onFour" type = "default">4</button>
            <button class = "button" bindtap = "onFive" type = "default">5</button>
            <button class = "button" bindtap = "onSix" type = "default">6</button>
            <button class = "button" bindtap = "onClear" type = "primary">C</button>
        </view>

        <view class = "forth">
            <button class = "button" bindtap = "onOne" type = "default">1</button>
            <button class = "button" bindtap = "onTwo" type = "default">2</button>
            <button class = "button" bindtap = "onThree" type = "default">3</button>
            <button class = "button" bindtap = "onPoint" type = "primary">.</button>
        </view>

        <view class = "fifth">
            <button class = "button1" bindtap = "onZero" type = "default">0</button>
            <button class = "button1" bindtap = "onEquality" type = "primary">=</button>
        </view>

        <view class = "share">
            <view class = "share_button_first">
                 <button class = "share_button" bindtap = "onRotate" type = "primary">旋转</button>
                 <button class = "share_button" bindtap = "onScale" type = "primary">缩放</button>
                 <button class = "share_button" bindtap = "onTranslate" type = "primary">移动</button>
            </view>
             <view class = "share_image"  animation = "{{animation}}">
                <image class = "image" src = "/images/share.jpg"> </image>
                <text class = "title"> 欢迎关注:iOSDevSkills</text>
             </view>
             <view class = "share_button_second">
                <button class = "share_button" bindtap = "onSkim" type = "primary">倾斜</button>
                <button class = "share_button" bindtap = "onRotateAndScale" type = "primary">旋转缩放</button>
                <button class = "share_button" bindtap = "onTranslateAndSkim" type = "primary">移动倾斜</button>
            </view>

            </view>
        </view>
    <view>

</view>